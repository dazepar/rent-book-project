<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/border_itemsearch"
    android:layout_margin="16dp">
    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Name"
        android:layout_toRightOf="@id/ivFavorite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Publisher"
        android:layout_toRightOf="@id/ivFavorite"
        android:layout_below="@id/tvFavorite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPublishing_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Publishing_year"
        android:layout_toRightOf="@id/ivFavorite"
        android:layout_below="@id/tvPublisher"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/baseline_delete_24" />
</RelativeLayout>