<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFDEF5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.ThankActivity">

    <!-- Icon of thumbs up -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_thumb_up_24"
        app:tint="#794C68F6" />

    <!-- Text view for thanking the user -->
    <TextView

        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_you_message"
        android:textColor="@color/blue"
        android:textSize="24sp"
       android:textStyle="italic"
        android:paddingTop="16dp"/>

    <Button
        android:id="@+id/btBackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"

        android:text="Trở về trang chủ !!"
        android:textStyle="bold"
        android:backgroundTint="#566EFF"/>




</LinearLayout>